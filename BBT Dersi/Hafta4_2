public class hafta4_2 {
    public static void main(String[] args) {
        //1-100 arasında çift sayıların toplamını ve ortalamasını bulan programı ayzınız..

        int toplam = 0, sayac = 0;
        double ort;
        for (int i = 0; i <= 100; i++) {
            if (i % 2 == 0) {
                toplam = toplam + i;
                sayac += 1;
            }
        }
        ort = toplam / sayac;
        System.out.println("Çift Sayıların toplamı : " + toplam + ", Ortalaması : " + ort);
    }
}
